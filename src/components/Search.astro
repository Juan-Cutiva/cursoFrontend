---
import SearchS from '../../public/searchS.astro';
---

<div class="">
	<input class="flex" />
	<h3 class="relative font-bold sm:mr-[11.5rem]">{Astro.props.text}</h3>
	<div class="flex justify-center">
		<div class="flex justify-start">
			<input
			style={Astro.props.style}
			class="h-10 w-[22rem] rounded-lg border-2 border-[#ffffff00] bg-grisClaro pb-1 pl-7 sm:w-96"
			type="text"
			placeholder={Astro.props.placeholder}
			/>
			<div class="absolute flex pt-[0.55rem] pl-[0.35rem]">
				<SearchS w="20" h="20" />
			</div>
		</div>
	</div>
</div>

<style>
	input::placeholder {
		color: #c7c7c7;
	}
	input[type='text']:focus {
		border: 2px solid #949494;
		outline: none;
	}
</style>
